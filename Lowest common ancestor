class Solution {
    Node LCA(Node root, Node n1, Node n2) {
         if (root == null || root == n1 || root == n2) {
            return root;
        }
        Node leftLCA = LCA(root.left, n1, n2);
        Node rightLCA = LCA(root.right, n1, n2);
        if (leftLCA != null && rightLCA != null) {
            return root;
        }
        return (leftLCA != null) ? leftLCA : rightLCA;
    }
}
