class Solution {
 class TreeInfo {
        int height;
        int diameter;
        TreeInfo(int height, int diameter) {
            this.height = height;
            this.diameter = diameter;
        }
    }

    // Main function
    int diameter(Node root) {
        return diameterHelper(root).diameter;
    }
    TreeInfo diameterHelper(Node root) {
        if (root == null) {
            return new TreeInfo(0, 0);
        }
        TreeInfo leftInfo = diameterHelper(root.left);
        TreeInfo rightInfo = diameterHelper(root.right);

        int height = Math.max(leftInfo.height, rightInfo.height) + 1;
        int diaThroughRoot = leftInfo.height + rightInfo.height; // edges count
        int diameter = Math.max(diaThroughRoot, Math.max(leftInfo.diameter, rightInfo.diameter));

        return new TreeInfo(height, diameter);
    }
}
